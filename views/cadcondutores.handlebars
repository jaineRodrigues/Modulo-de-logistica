<html>

  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/personalData.css" />
    <link rel="stylesheet" href="/css/homepage.css" />
  </head>

  <body>
    <header class="cabeÃ§alho">
      <a href="#" class="logo">
        <img src="/img/logo.jpg" alt="logo do sistema" />
      </a>
      <div class="icons">
        <div class="fas fa-bars" id="menu-btn"></div>
      </div>

      <div class="search-form">
        <input type="text" id="search-box" placeholder="search here..." />
        <label for="search-box" class="fas fa-search"></label>
      </div>
    </header>

    <div class="container">
      <div class="usuario-container">
        <div class="gestao-de-dados">
          <h2>Cadastro de Condutores</h2><br /><br />
          {{#if message}}
            <p>{{message}}</p>
          {{/if}}
          <form action="/auth/changePassword" method="POST">

            <label for="name">Nome:</label>
            <input type="text" id="name" name="name" required />

            <label for="cpf">CPF:</label>
            <input
              type="text"
              id="cpf"
              name="cpf"
              placeholder="000.000.000-00"
              required
            />

            <label for="telefone">Telefone:</label>
            <input
              type="text"
              id="telefone"
              name="telefone"
              placeholder="(00) 00000-0000"
              required
            />

            <label for="cnh">CNH:</label>
            <input
              type="text"
              id="cnh"
              name="cnh"
              placeholder="0000000000"
              required
            />

            <label for="validade">Validade CNH:</label>
            <input type="date" id="validade" name="validade" />

            <label for="categoria">Categoria:</label>
            <select id="categoria" name="categoria" style="width: 100%;">
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="C">C</option>
              <option value="D">D</option>
              <option value="E">E</option>
            </select>

            <button type="submit" class="botao">Cadastrar</button>
          </form>
        </div>
      </div>
    </div>

    <section class="rodape" id="Contato">
      <div class="redes">
        <a href="#" class="fab fa-facebook-f"></a>
        <a href="#" class="fab fa-instagram"></a>
        <a href="#" class="fab fa-linkedin"></a>
      </div>
      <div class="credito"> <span>@IF sistema</span></div>
    </section>

    <script src="/js/homepage.js"></script>
    <script
      src="https://kit.fontawesome.com/560011bd3e.js"
      crossorigin="anonymous"
    ></script>
  </body>

</html>