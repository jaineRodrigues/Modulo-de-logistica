<html>

  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/personalData.css" />
    <link rel="stylesheet" href="/css/homepage.css" />
  </head>

  <body>
    <header class="cabeçalho">
      <a href="#" class="logo">
        <img src="/img/logo.jpg" alt="logo do sistema" />
      </a>
      <div class="icons">
        <div class="fas fa-bars" id="menu-btn"></div>
      </div>

      <div class="search-form">
        <input type="text" id="search-box" placeholder="search here..." />
        <label for="search-box" class="fas fa-search"></label>
      </div>
    </header>

    {{#if message}}
      <div class="container">
        <div class="usuario-container">
          <div class="gestao-de-dados">
            <h2>{{message}}</h2><br /><br />
            <a href="/auth/login" class="botao">Voltar</a>
          </div>
        </div>
      </div>
    {{else}}

      <div class="container tela-extensa">
        <div class="usuario-container">
          <div class="gestao-de-dados">
            <h2>Cadastro de Transportadora</h2><br /><br />
            <form action="/cadtransportadora/register" method="POST">
              <label for="name">Nome Fantasia:</label>
              <input type="text" id="name" name="name" required />

              <label for="name">Razão Social:</label>
              <input type="text" id="razao" name="razao" required />

              <label for="cnpj">CNPJ:</label>
              <input
                type="text"
                id="cnpj"
                name="cnpj"
                placeholder="00.000.000/0000-00"
                required
              />

              <label for="telefone">Telefone:</label>
              <input
                type="text"
                id="telefone"
                name="telefone"
                placeholder="(00) 00000-0000"
                required
              />

              <label for="telefone">CEP:</label>
              <input
                type="text"
                id="cep"
                name="cep"
                placeholder="00.000-000"
                required
              />

              <label for="email">Email:</label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="mail@mail.com"
                required
              />

              <label for="name">Cidade/Estado:</label>
              <input
                type="text"
                id="cidade"
                name="cidade"
                placeholder="São Paulo - SP"
                required
              />

              <label for="name">Logradouro:</label>
              <input
                type="text"
                id="logradouro"
                name="logradouro"
                placeholder="Av. Primeiro de Janeiro, Nº 15"
                required
              />

              <button type="submit" class="botao">Cadastrar</button>
            </form>
          </div>
        </div>
      </div>

    {{/if}}

    <section class="rodape" id="Contato">
      <div class="redes">
        <a href="#" class="fab fa-facebook-f"></a>
        <a href="#" class="fab fa-instagram"></a>
        <a href="#" class="fab fa-linkedin"></a>
      </div>
      <div class="credito"> <span>@IF sistema</span></div>
    </section>

    <script src="/js/homepage.js"></script>
    <script
      src="https://kit.fontawesome.com/560011bd3e.js"
      crossorigin="anonymous"
    ></script>
  </body>

</html>